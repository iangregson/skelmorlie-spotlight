{
  "name": "koa-app",
  "version": "1.0.0",
  "description": "A first start with koa",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/backend/bin/dev.js --watch src/backend",
    "start": "WEB_CONCURRENCY=1 NODE_ENV=production node dist/bin/prod",
    "prebuild": "npm run clean",
    "build:server": "NODE_ENV=production babel src/backend --out-dir dist --ignore bin/dev.js",
    "build:client": "NODE_ENV=production webpack --config src/frontend/webpack.prod.config.js --production --optimize --progress",
    "build": "npm run build:server && npm run build:client",
    "s3": "AWS_PROFILE=iangregson node deploy-tools/deployS3.js",
    "clean": "rm -rf dist",
    "start:prod": "WEB_CONCURRENCY=1 npm run build && node dist/app/bin/prod",
    "test": "NODE_ENV=test mocha src/**/**/**/*.test.js --compilers jsx?:babel-register --require src/frontend/testHelpers.js --watch",
    "tests-once": "NODE_ENV=test mocha src/**/**/**/*.test.js --compilers jsx?:babel-register --require src/frontend/testHelpers.js",
    "cover": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- src/**/**/**/*.test.js --compilers jsx?:babel-register --require src/frontend/testHelpers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iangregson/koa-app.git"
  },
  "keywords": [
    "koa"
  ],
  "author": "Ian Gregson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iangregson/koa-app/issues"
  },
  "homepage": "https://github.com/iangregson/koa-app#readme",
  "devDependencies": {
    "aws-sdk": "2.6.15",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "2.0.3",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.13.0",
    "babel-register": "^6.14.0",
    "chai": "3.5.0",
    "coveralls": "2.11.12",
    "css-loader": "^0.25.0",
    "enzyme": "2.4.1",
    "eslint": "^3.4.0",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "9.6.0",
    "koa-webpack-dev-middleware": "^1.2.2",
    "koa-webpack-hot-middleware": "^1.0.3",
    "localStorage": "1.0.3",
    "mocha": "3.1.0",
    "nib": "^1.1.2",
    "nodemon": "^1.10.2",
    "react-addons-test-utils": "15.3.2",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "classnames": "^2.2.5",
    "koa": "^2.0.0-alpha.6",
    "koa-bodyparser": "^2.2.0",
    "koa-convert": "^1.2.0",
    "koa-router": "^7.0.1",
    "koa-static": "2.0.0",
    "mobx": "^2.5.1",
    "mobx-react": "^3.5.5",
    "pm2": "2.1.4",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "scruffy": "1.0.1",
    "semantic-ui-react": "0.59.0",
    "socket.io": "^1.4.8",
    "socket.io-client": "1.5.0"
  }
}
